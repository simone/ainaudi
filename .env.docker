# Docker Compose environment variables
# Copy this to .env and fill in the values

# Database
DB_NAME=ainaudi_db
DB_USER=postgres
DB_PASSWORD=postgres

# Django
DJANGO_SECRET_KEY=dev-secret-key-change-in-production-with-real-secret

# Hosts (for production)
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# Email SMTP (Gmail)
# Per testare: ./scripts/test-email.sh tua@email.com
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # Cambiar a smtp.EmailBackend per produzione
# Per produzione, decommenta:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=s.federici@gmail.com
EMAIL_HOST_PASSWORD=                    # Gmail App Password (16 caratteri, es: abcdefghijklmnop)
DEFAULT_FROM_EMAIL="AINAUDI (M5S) <noreply@ainaudi.it>"

# Google Cloud (per produzione)
GOOGLE_CLOUD_PROJECT=ainaudi-prod
GCS_BUCKET_NAME=ainaudi-documents

# Feature Flags
FEATURE_MAGIC_LINK=true
FEATURE_M5S_SSO=false
FEATURE_INCIDENT_REPORTS=true
FEATURE_SECTION_IMPORT=true
FEATURE_TEMPLATES_ENGINE=true
FEATURE_AI_ASSISTANT=true

# === Vertex AI Configuration (for AI Assistant) ===
# Requires Google Cloud service account credentials
# See VERTEX_AI_SETUP.md for complete setup guide

# Google Cloud Project ID (deve esistere su Google Cloud)
VERTEX_AI_PROJECT=ainaudi-prod

# Vertex AI Region - Europa üá™üá∫
# europe-west1: Belgio - GDPR compliant, Gemini disponibile ‚úÖ
# europe-west8: Milano - Embeddings OK ma Gemini non disponibile ‚ùå
# us-central1: USA - Sempre disponibile ma non GDPR
VERTEX_AI_LOCATION=europe-west1

