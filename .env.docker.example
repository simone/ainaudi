# Docker Compose environment variables
# Copia questo file in .env.docker e configura i valori

# Frontend (React/Vite)
VITE_API_URL=http://localhost:3001
VITE_RDL_REGISTRATION_URL=https://forms.gle/sLzS7fABZNXeUUnC9

# Database
DB_NAME=ainaudi_db
DB_USER=postgres
DB_PASSWORD=postgres

# Django
DJANGO_SECRET_KEY=dev-secret-key-change-in-production-with-real-secret

# Hosts (per sviluppo locale con Docker)
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
FRONTEND_URL=http://localhost:3000

# Email SMTP - Gmail (Opzione A - Raccomandato)
# Per generare App Password: https://myaccount.google.com/apppasswords
# Per testare: ./scripts/test-email.sh tua@email.com

# Development: console backend (stampa email nel log)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: decommenta le righe sotto e configura
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=s.federici@gmail.com
# EMAIL_HOST_PASSWORD=abcdefghijklmnop  # Gmail App Password (16 caratteri, senza spazi)
# DEFAULT_FROM_EMAIL=s.federici@gmail.com

# Oppure SendGrid SMTP (Opzione B - Per volumi alti)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.xxxxxxxxxxxxxxxxxxxxxxxx  # SendGrid API Key
# DEFAULT_FROM_EMAIL=noreply@m5s.it

# Google Cloud (per produzione)
GOOGLE_CLOUD_PROJECT=ainaudi-prod
GCS_BUCKET_NAME=ainaudi-documents

# Feature Flags
FEATURE_MAGIC_LINK=true
FEATURE_M5S_SSO=false
FEATURE_INCIDENT_REPORTS=true
FEATURE_SECTION_IMPORT=true
FEATURE_TEMPLATES_ENGINE=true
FEATURE_AI_ASSISTANT=true

# === Vertex AI Configuration (for AI Assistant) ===
# Requires Google Cloud service account credentials
# See VERTEX_AI_SETUP.md for complete setup guide

# Google Cloud Project ID (deve esistere su Google Cloud)
VERTEX_AI_PROJECT=ainaudi-prod

# Vertex AI Region - Europa üá™üá∫
# europe-west1: Belgio - GDPR compliant, Gemini 2.0 disponibile ‚úÖ (RACCOMANDATO)
# europe-west8: Milano - Solo embeddings, Gemini NON disponibile ‚ùå
# us-central1: USA - Sempre disponibile ma non GDPR
VERTEX_AI_LOCATION=europe-west1

# Vertex AI LLM Model (Gemini)
# Modelli stabili 2025: gemini-2.0-flash-001, gemini-2.5-flash
# gemini-1.5-flash √® deprecato
VERTEX_AI_LLM_MODEL=gemini-2.0-flash-001

