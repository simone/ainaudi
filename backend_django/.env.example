# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# Option 1: Direct connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ainaudi_db
DB_USER=postgres
DB_PASSWORD=your-password

# Option 2: Cloud SQL (on GAE)
# CLOUD_SQL_CONNECTION_NAME=project:region:instance

# Option 3: DATABASE_URL
# DATABASE_URL=postgres://user:password@host:port/dbname

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL (for Magic Link emails)
FRONTEND_URL=http://localhost:3000

# Email (for Magic Link)
# Development: console backend (prints to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: SendGrid SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=SG.your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@m5s.it

# Magic Link
MAGIC_LINK_TOKEN_EXPIRY=3600

# Redis Event Bus (for PDF generation)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
PDF_PREVIEW_EXPIRY_SECONDS=86400

# Google Cloud Storage (for PDFs)
GOOGLE_CLOUD_PROJECT=ainaudi-prod
GCS_BUCKET_NAME=ainaudi-documents

# Feature Flags
FEATURE_MAGIC_LINK=true
FEATURE_M5S_SSO=false
FEATURE_INCIDENT_REPORTS=true
FEATURE_SECTION_IMPORT=true
FEATURE_TEMPLATES_ENGINE=true
FEATURE_AI_ASSISTANT=false
